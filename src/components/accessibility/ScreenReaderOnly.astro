---
interface Props {
  as?: string;
  [key: string]: any;
}

const { as: Component = 'span', ...props } = Astro.props;
---

<Component {...props} class="sr-only">
  <slot />
</Component>

<style>
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>

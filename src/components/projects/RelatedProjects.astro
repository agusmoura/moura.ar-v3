---
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';
import TechBadge from './TechBadge.astro';
import type { CollectionEntry } from 'astro:content';

export interface Props {
  projects: CollectionEntry<'projects'>[];
  currentCategory: string;
}

const { projects, currentCategory } = Astro.props;
---

{
  projects.length > 0 && (
    <section class="border-t border-border/30 py-20 bg-surface/5">
      <div class="container mx-auto px-4 lg:px-8 xl:max-w-7xl">
        <div class="text-center mb-16" data-aos="fade-up" data-aos-duration="800">
          <h2 class="font-serif text-3xl md:text-4xl font-bold mb-4">Proyectos Relacionados</h2>
          <p class="text-lg text-muted max-w-2xl mx-auto">
            Otros trabajos en la categor√≠a {currentCategory}
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
          {projects.map((project, index) => (
            <a
              href={`/projects/${project.data.slug}`}
              class="group relative bg-charcoal rounded-2xl overflow-hidden border border-border hover:border-accent/50 transition-all duration-500 hover:scale-105 shadow-lg hover:shadow-2xl"
              data-aos="fade-up"
              data-aos-duration="800"
              data-aos-delay={index * 200}
            >
              {project.data.images?.cover && (
                <div class="aspect-[16/9] overflow-hidden">
                  <Image
                    src={project.data.images.cover.src}
                    alt={project.data.images.cover.alt}
                    class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                    width={400}
                    height={225}
                    loading="lazy"
                    quality={80}
                  />
                </div>
              )}

              <div class="p-6">
                <h3 class="font-serif font-bold text-xl mb-3 group-hover:text-accent transition-colors">
                  {project.data.title}
                </h3>
                <p class="text-muted text-sm line-clamp-2 mb-4">{project.data.description}</p>

                {project.data.technologies && project.data.technologies.length > 0 && (
                  <div class="flex flex-wrap gap-2">
                    {project.data.technologies.slice(0, 3).map((tech: string) => (
                      <TechBadge tech={tech} size="sm" />
                    ))}
                    {project.data.technologies.length > 3 && (
                      <div class="inline-flex items-center px-2 py-1 bg-surface/30 border border-border rounded text-xs text-muted">
                        +{project.data.technologies.length - 3}
                      </div>
                    )}
                  </div>
                )}
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )
}
